<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.parabasis.basiscoffee.MainActivity"
    android:background="#d26424">


    <Button
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="order"
        android:background="#ea891b"
        android:textColor="#fefbfb"
        android:onClick="display_menu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/binventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="create inventory"
        android:background="#ea891b"
        android:textColor="#fefbfb"
        android:layout_below="@+id/border"
        android:layout_centerHorizontal="true" />

    <ImageView android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/coffee"
        android:layout_below="@+id/binventory"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="49dp" />
</RelativeLayout>
